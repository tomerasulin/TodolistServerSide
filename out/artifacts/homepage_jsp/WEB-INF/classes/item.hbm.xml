<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="il.ac.hit.model.Item" table="ITEMS">
        <id name="serialNum" type="int" column="SERIALNUM">
            <generator class="increment"/>
        </id>
        <property name="date">
            <column name="DATE"/>
        </property>
        <property name="checked">
            <column name="CHECKED"/>
        </property>
        <property name="name">
            <column name="NAME"/>
        </property>
        <property name="userID">
            <column name="USERID"/>
        </property>
    </class>
</hibernate-mapping>